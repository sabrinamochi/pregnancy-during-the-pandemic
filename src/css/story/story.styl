/* CUSTOM STORY STYLE */

$pink = #E8356D

/* Device media queries */
tablet = "(min-width: 768px) and (max-width: 979px)"
phone = "(max-width: 767px)"

.main-column-width 
    width $column-width
    @media phone 
        width $phone-column-width
    margin 3em auto

h2
    font-family $ft-grotzec
    font-size xx-large
    line-height 110%
    @media phone 
        font-size x-large

/* chart */
h3
    font-family $ft-grotzec
h5 
    line-height 120%
    font-weight 400
    // font-style italic

.axis path, .axis line
    stroke #5F5F5F
.axis text 
    fill #5F5F5F

.y-axis
    .domain
            stroke none
    line
        stroke-width 2
    .tick
        text 
            text-anchor middle
            font-size 12px

.tooltip
    position absolute
    top 0
    left 0
    background-color $white
    padding 0.2rem
    opacity 0
    visibility hidden
    border 3px solid $black
    margin 0 auto
    pointer-events none

// .mouse-over-line
//     stroke #5F5F5F
//     stroke-width 2
//     opacity 0

.mouse-over-circle
    stroke #5F5F5F
    stroke-width 2
    fill none
    opacity 0

/* */

article 
        margin 1.5em 0

.overview, .murray
    &__img
        margin 0 auto
        width $column-width
        @media phone
            width $phone-column-width


.hopecovid
    &__bars
        &__container
            margin 2rem 0
            p
                margin 0
                font-size small
                line-height 130%
            &__bar
                position relative
                height 2rem
                background-color #e6e6e6
                margin 1.6rem 0 0.5rem
                width 100%
                box-shadow inset 0 -1px 1px rgba(255, 255, 255, 0.3)
                // border-radius 5px
                p.reader
                    position absolute
                    top -60%
                    transform translateX(-50%)
                    width fit-content
                    left 50%
                span 
                    overflow hidden
                span.bar
                    position relative
                    display block
                    height 100%
                    cursor pointer
                span.tick
                    top 0
                    left 50%
                    position absolute
                    background-color $black
                    width 0.8%
                    height 120%
                    opacity 1
                    transform translateY(-5%)
                    cursor pointer

    .progess-animation-nervous
        animation progressNervous 1s ease-in-out
        animation-fill-mode both

    .progess-animation-talk
        animation progressTalk 1s ease-in-out
        animation-fill-mode both

    @keyframes progressNervous
        0% 
            width 0
            background-color $pink
        
        100% 
            width 50%
            background-color $pink

    @keyframes progressTalk
        0% 
            width 0
            background-color $pink
        
        100% 
            width 87%
            background-color $pink
        

#reddit
    margin-bottom 5em
    h2
        margin 0 auto 1rem
        width $column-width
        @media phone
            width $phone-column-width
    .reddit__container
        width 80%
        margin 0 auto
        position relative
        display flex
        justify-content center
        @media phone
                flex-direction column-reverse
    .scroll__graphic
        // overflow hidden
        height 65vh
        position sticky
        position -webkit-sticky
        top 10rem
        align-self start
        width 60%
        @media phone
            top 5rem
            width 98%
    .scroll__text
        position relative
        margin auto
        max-width 30%
        z-index 1000
        @media phone
            max-width 80%
    .step 
        height 100vh
        p
            background-color rgba(255,255,255,1)    
            padding 1rem 
            // box-shadow 2px 2px 3px rgba(0,0,0,0.5)
            border 3px solid $black
    .step:first-of-type
        margin-top 10rem
    .tooltip
        h4 
                text-align center
        .text
            h4
                font-size 14px
            .text-container
                display flex
                justify-content center
                div
                    width 30%
                    p
                        margin 0
                        font-size 12px
                        line-height 110%
                        text-align center
                div:first-of-type
                    margin-right 3rem
        .chart
            h4
                font-size 14px
            .bars
                padding 0.5rem 0
                width 12rem
                @media phone
                    width 8rem
                margin 0 auto
                display grid
                .bar-group
                    display flex
                    align-items center
                    justify-content space-between
                    div
                        font-size 10px
                        width 50%
                        .bar
                            height 0.5rem
                            background-color $black
                            display inline-block
                    div:first-of-type
                        margin-right 1rem
                        width 40%
                        text-align right
                        @media phone
                            margin-right 0
                            width 100%
                            text-align left
                    

#less-baby
    .birth-rates-chart
        height 60vh
        width 100%
        margin auto
        @media phone 
            height 50vh
        .y-axis .tick text 
            text-anchor initial
            font-size 10px
            transform translateY(-10px)
            @media phone 
                font-size 8px
        .label
            font-size 14px
            transform translate(-15px, -20px)
            fill $pink
            font-weight bold
            @media phone 
                font-size 10px
                font-weight regular
    .disparity-bar-charts
        height 60vh
        width 100%
        margin auto
        @media phone 
            height 50vh
        .x-axis
            .tick line
                opacity 0

.olive
    position relative
    .paper
        position relative
        height 50vh
        width 100%
        background rgba(255,255,255,0.9)
        // margin -275px -225px
        // left 50%
        // top 50%
        box-shadow 0px 0px 5px 0px #888
        &::before
            content ''
            position absolute
            left 45px
            height 100%
            width 2px
            background rgba(255,0,0,0.4)
        .lines 
            margin-top: 40px
            height calc(100% - 40px)
            width 100%
            background-image repeating-linear-gradient(white 0px, white 24px, steelblue 25px)
                
        .text 
            position absolute
            top 54px
            left 55px
            bottom 10px
            right 10px
            line-height 25px
            overflow hidden
            outline none
            font-family Bradley Hand, cursive
                
        .holes 
            position absolute
            left 10px
            height 25px
            width 25px
            background lightgoldenrodyellow
            border-radius 50%
            box-shadow inset 0px 0px 2px 0px #888
        .hole-top 
            top 10%
                
        .hole-middle 
            top 50%
            
        .hole-bottom 
            bottom 10%
                


#more-stories
    audio 
        margin 2rem 0
        width 95%
    .title__buttons
        display flex
        justify-content space-between
        align-items center
        @media phone
                flex-direction column
                align-items flex-start
        h2 
            margin-top 0
    .story__container
        display none
        &.active
            display block
        h3
            @media phone
                margin-top 0
        &__content
            display flex
            justify-content space-between
            @media phone
                flex-direction column
            &__text__holder
                width 40%
                @media phone
                    width 95%
                p 
                    margin 0
                
            &__image__holder
                width 50%
                @media phone
                    width 95%
        &#quintett, &#olive, &#jordan
            .story__container__content
                @media phone
                    flex-direction column-reverse
    
    .button__container
        position relative
        z-index 100
        display flex
        // justify-content flex-end
        padding 0.5rem 0 0.25rem 0
        width 20%
        @media phone
            width 80%
        .button__previous
            border 1px solid $black
        .button__next
            border-top 1px solid $black
            border-right 1px solid $black
            border-bottom 1px solid $black
        button 
            display flex
            align-content center
            justify-content center
            flex-basis 50%
            font-size 2rem
            color $black
            height 30px
            // flex-basis 10%
            background $white
            .icon
                position relative
                margin auto
                width 20px
                height 0.8px
                background $black
            .arrow-left
                &::before 
                    content ''
                    position absolute
                    left 0.8px
                    top -4px
                    width 9px
                    height 9px
                    border-top 1px solid $black
                    border-right 1px solid $black
                    transform rotate(-135deg)
            .arrow-right
                &::before 
                    content ''
                    position absolute
                    right 0.8px
                    top -4px
                    width 9px
                    height 9px
                    border-top 1px solid $black
                    border-right 1px solid $black
                    transform rotate(45deg)
      
