/* CUSTOM STORY STYLE */

$pink = #E8356D

.main-column-width 
    width $column-width
    margin 3em auto

h2
    font-family $ft-grotzec
    font-size xx-large

/* chart */
h3
    font-family $ft-grotzec
h5 
    line-height 120%
    font-weight 400
    // font-style italic

.axis path, .axis line
    stroke #5F5F5F
.axis text 
    fill #5F5F5F

.y-axis
    .domain
            stroke none
    line
        stroke-width 2
    .tick
        text 
            text-anchor middle
            font-size 12px

.tooltip
    position absolute
    top 0
    left 0
    background-color $white
    padding 1rem
    opacity 0

.mouse-over-line
    stroke #5F5F5F
    stroke-width 2
    opacity 0

.mouse-over-circle
    stroke #5F5F5F
    stroke-width 2
    fill none
    opacity 0

/* */

.overview, .murray
    article 
        margin 1.5em 0
    &__img
        margin 0 auto
        width $column-width


.hopecovid
    &__bars
        &__container
            margin 2rem 0
            p
                margin 0
                font-size small
                line-height 130%
            &__bar
                position relative
                height 2rem
                background-color #e6e6e6
                margin 1.6rem 0 0.5rem
                width 100%
                box-shadow inset 0 -1px 1px rgba(255, 255, 255, 0.3)
                // border-radius 5px
                p.reader
                    position absolute
                    top -60%
                    transform translateX(-50%)
                    width fit-content
                    left 50%
                span 
                    overflow hidden
                span.bar
                    position relative
                    display block
                    height 100%
                    cursor pointer
                span.tick
                    top 0
                    left 50%
                    position absolute
                    background-color $black
                    width 0.8%
                    height 120%
                    opacity 1
                    transform translateY(-5%)
                    cursor pointer

    .progess-animation-nervous
        animation progressNervous 1s ease-in-out
        animation-fill-mode both

    .progess-animation-talk
        animation progressTalk 1s ease-in-out
        animation-fill-mode both

    @keyframes progressNervous
        0% 
            width 0
            background-color $pink
        
        100% 
            width 50%
            background-color $pink

    @keyframes progressTalk
        0% 
            width 0
            background-color $pink
        
        100% 
            width 87%
            background-color $pink
        

#reddit
    .reddit__container
        position relative
    .scroll__graphic
        height 50vh
    .tooltip
        border 3px solid $black
        margin 0 auto
        h4 
                text-align center
        .text
            .text-container
                display flex
                justify-content center
                div
                    width 30%
                    p
                        margin 0
                        font-size 14px
                        line-height 110%
                        text-align center
                div:first-of-type
                    margin-right 3rem
        .chart
            .bars
                padding 0.5rem 0
                width 15rem
                margin 0 auto
                .bar-group
                    display flex
                    justify-content center
                    align-items center
                    justify-content space-between
                    div
                        font-size 12px
                        width 40%
                        .bar
                            height 0.5rem
                            background-color $black
                            display inline-block
                    div:first-of-type
                        margin-right 1rem
                        width 60%
                    

