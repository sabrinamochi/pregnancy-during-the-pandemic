
/* Device media queries */
tablet = "(min-width: 768px) and (max-width: 979px)"
phone = "(max-width: 767px)"

.opening
	background-color $black
	// z-index -10
	position relative
	color $white
	&__aurora
		position sticky
		top 0 
		// height 100vh
	section
		width 70%
		margin 0 auto
	&__text
		text-align center
		position relative
		min-height 50rem
		p
			max-width 60%
			height fit-content
			font-size x-large
			margin 0 auto
			font-family $serif
		p:first-of-type
			padding-top 40%
	&__text:last-of-type
		margin-bottom 0
	&__img
		margin-bottom 3rem
		z-index 1000
		position relative
	&__quote
		height fit-content
		overflow auto
		&__container
			width 50%
			margin 6rem 0
			p, a
				font-family $serif
				// margin 0
				color $white
				line-height 130%
			.quote
				border-bottom none
				z-index 1000
				font-size 20px
			.name
				font-family $sans
				font-size 14px
				margin-top 0.2rem
				

.intro
	margin 0 auto
	// padding 6rem 1rem 3rem 1rem

	// &__img
	// 	background-image url('./assets/images/cover-photo.jpg') 
	// 	display block
	// 	background-size 100%
	// 	width 100%
