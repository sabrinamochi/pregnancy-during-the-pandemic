
/* Device media queries */
tablet = "(min-width: 768px) and (max-width: 979px)"
phone = "(max-width: 767px)"

.opening
	background-color $black
	// z-index -10
	position relative
	color $white
	&__aurora
		// position relative
		// top 0 
		// height 100vh
	&__text
		text-align center
		position sticky
		top 40vh
		// left 0
		p
			max-width 45%
			// height fit-content
			font-size x-large
			margin 0 auto
			font-family $serif
			@media phone
				max-width 90%
				font-size medium
			// p:first-of-type
			// padding-top 40%
	&__text:nth-of-type(2)
		padding-bottom 50vh
	// figure
	// 	width 70%
	// 	margin 50rem auto
	&__img
		width 70%
		@media phone
			width $phone-column-width
		margin 40vh auto 0
		@media phone
			margin-top 20vh
		// padding-bottom 100vh
		z-index 1000
		position relative
	&__img:last-of-type
		// height 10vh
		margin 60vh auto 0
		padding-bottom 100vh
		@media phone
			margin-top 25vh
			padding-bottom 120vh
		&__quote
			height fit-content
			overflow auto
			&__container
				width 50%
				margin 6rem 0
				p, a
					font-family $serif
					// margin 0
					color $white
					line-height 130%
				.quote
					border-bottom none
					z-index 1000
					font-size 20px
				.name
					font-family $sans
					font-size 14px
					margin-top 0.2rem

	a#play-pause-button
		position sticky
		font-size 50px
		top 55px
		left 20px
		border-bottom 0	
		cursor pointer
		&:before 
			color white
	audio 
		display none
					

.intro
	margin 0 auto
	font-family $sans
	// padding 6rem 1rem 3rem 1rem

	// &__img
	// 	background-image url('./assets/images/cover-photo.jpg') 
	// 	display block
	// 	background-size 100%
	// 	width 100%
	// 	height 90vh

	&__hed
		width 70%
		margin 5rem auto 0
		text-align center
		line-height 110%
		font-family $ft-grotzec
		color $black
		@media phone
			width $phone-column-width
	&__social
		text-align center
		font-size larger
	&__dek
		width 40%
		margin 2em auto 20px
		text-align center
		@media phone
			width 70%
			line-height 140%
	h1
		font-size 70px
		@media phone
			font-size 50px

	&__byline
		max-width $column-width
		margin 4rem auto 0
		text-align center
	
	&__time
		display block
		max-width $column-width
		margin 0.3rem auto 0
		text-align center
