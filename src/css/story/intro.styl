	&__hed
		width 70%
		margin 5rem auto 0
		text-align center
		line-height 110%
		font-family $ft-grotzec
		color $black
		@media phone
			width $phone-column-width
			font-size 40px
		
	&__dek
		max-width $column-width
		margin 1em auto 0
		margin-top 1rem
		text-align center
	
	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 2rem
		text-align center
	
	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
